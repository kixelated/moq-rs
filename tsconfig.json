{
	"compilerOptions": {
		/* Basic Options */
		"lib": ["DOM", "ES2020"],
		"target": "ES2020",
		"module": "ESNext",
		"moduleResolution": "Bundler",

		/* Emit Options */
		"outDir": "dist",
		"declaration": true,
		"sourceMap": true,

		/* type checking */
		"strict": true,
		// TODO: Enable when all code is refactored
		//"noUnusedLocals": true,
		//"noUnusedParameters": true,
		"skipLibCheck": true,
		"isolatedModules": true,

		/* Experimental Features */
		"useDefineForClassFields": true,

		// JSX
		"jsx": "react",
		"jsxFactory": "jsx",
		"jsxFragmentFactory": "jsxFragment",

		"paths": {
			"@dist/*": ["./dist/*"]
		}
	},

	"include": ["moq-web/src"],
	"exclude": ["node_modules"]
}
